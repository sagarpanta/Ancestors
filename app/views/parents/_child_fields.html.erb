<fieldset class="child_fields">
  <h4>Child</h4>
  Full Name<br>
  <%= f.text_field :fullname %><br>
  DOB<br>
  <%= f.date_field :dob %><br>
  Gender<br>
  <%= f.text_field :gender %><br>
  Current City<br>
  <%= f.text_field :state %><br>
  Current Country<br>
  <%= f.text_field :country %><br>
  About<br>
  <%= f.text_area :description %><br>
  Upload File</br>
  <%= f.file_field :photo , :class=>"fileinput" %><br><br>
  <%= f.hidden_field :_destroy %>
  <%= link_to "remove", '#', class: "remove_fields" %><br><br>
  <%= f.fields_for :spouses do |builder| %>
    <%= render 'spouse_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Add spouse", f, :spouses %>
</fieldset>